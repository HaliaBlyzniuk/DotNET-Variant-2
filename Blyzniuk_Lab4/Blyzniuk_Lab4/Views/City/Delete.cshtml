@model Blyzniuk_Lab4.Models.City
@{
    ViewBag.Title = "Delete city";
}

<div>
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Model.Id</dd>

        <dt>Name</dt>
        <dd>@Model.Name</dd>

        <dt>Manager</dt>
        <dd>@Model.Code</dd>

        <dt>Address</dt>
        <dd>@Model.Rate</dd>
    </dl>

    <div>
        <form asp-controller="City" asp-action="Delete">
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Delete" />
            </div>
        </form>
    </div>
</div>